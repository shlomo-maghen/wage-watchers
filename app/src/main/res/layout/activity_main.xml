<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <EditText
        android:id="@+id/et_job_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/job_title"
        android:inputType="textCapWords"
        />
    <EditText
        android:id="@+id/et_hourly_rate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_job_title"
        android:hint="@string/hourly_rate"
        android:inputType="numberDecimal"
        />
    <Button
        android:id="@+id/bt_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_hourly_rate"
        android:text="@string/start"
        android:onClick="validateFields"/>

    <TextView
        android:id="@+id/money_clock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_start"
        android:text="@string/start_text"
        android:gravity="center"
        android:textSize="80sp"/>

</RelativeLayout>
